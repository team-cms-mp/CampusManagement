@model CampusManagement.Models.TimeSlotCourseAllocation

@using (Html.BeginForm("Create", "TimeSlotCourseAllocations", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="row">
        <h2><span class="col-sm-12">Add Slot Course</span></h2>
    </div>
    <hr style=" border-top: 1px solid #6d9b90;" />
    @Html.Partial("_MessageView")

    <div class="row">
        <div class="col-sm-12">
            @Html.LabelFor(model => model.TimeSlotID, htmlAttributes: new { @class = "control-label" })
            @Html.DropDownList("TimeSlotID", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.TimeSlotID, "", new { @class = "text-danger" })
        </div>
        <div class="col-sm-12">
            @Html.LabelFor(model => model.TCourseAllocationID, htmlAttributes: new { @class = "control-label" })
            @Html.DropDownList("TCourseAllocationID", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.TCourseAllocationID, "", new { @class = "text-danger" })
        </div>
        <div class="col-sm-3">
            @Html.LabelFor(model => model.IsActive, htmlAttributes: new { @class = "control-label" })
            @Html.DropDownList("IsActive", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-sm-3">
            <input type="submit" value="Add" class="btn btn-success" />
            <a href="@Url.Content("~/TimeSlotCourseAllocations/Index")" class="btn btn-success">Refresh</a>
        </div>
    </div>
}
