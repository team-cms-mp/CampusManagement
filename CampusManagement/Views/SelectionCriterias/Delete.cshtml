@model CampusManagement.Models.SelectionCriteria
@using CampusManagement.Models
<h4 class="alert alert-info">Are you sure you want to delete this?</h4>

<div>
    <dl class="dl-horizontal">
        <dt>
            <label class="control-label">Critria ID</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CriteriaID)
        </dd>

        <dt>
            <label class="control-label">Batch Program</label>
        </dt>

        <dd>
            @{
                ModelCMSContainer dbc = new ModelCMSContainer();
                GetBatchProgramNameConcat_Result dv = dbc.GetBatchProgramNameConcat("", 0).FirstOrDefault(bp => bp.ID == Model.BatchProgramID);
            }
            @Html.Raw(dv.Name)
        </dd>

        <dt>
            <label class="control-label">Degree</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Degree.DegreeName)
        </dd>

        <dt>
            <label class="control-label">Percentage</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DegreePercentage)
        </dd>

        <dt>
            <label class="control-label">@Html.DisplayNameFor(model => model.IsActive)</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IsActive)
        </dd>

        <dt>
            <label class="control-label">@Html.DisplayNameFor(model => model.CreatedOn)</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatedOn)
        </dd>

        <dt>
            <label class="control-label">@Html.DisplayNameFor(model => model.CreatedBy)</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatedBy)
        </dd>

        <dt>
            <label class="control-label">@Html.DisplayNameFor(model => model.ModifiedOn)</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ModifiedOn)
        </dd>
        <dt>
            <label class="control-label">@Html.DisplayNameFor(model => model.ModifiedBy)</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ModifiedBy)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-success" />
            <a href="@Url.Content("~/SelectionCriterias/Index")" class="btn btn-success">Cancel</a>
        </div>
    }
</div>
