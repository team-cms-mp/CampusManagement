@model CampusManagement.Models.TimeSlot

@using (Html.BeginForm("Create", "TimeSlots", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="row">
        <h2><span class="col-sm-12">Add Time Slots</span></h2>
    </div>
    <hr style=" border-top: 1px solid #6d9b90;" />
    @Html.Partial("_MessageView")

    <div class="row">
        <div class="col-sm-3">
            @Html.LabelFor(model => model.DayName, htmlAttributes: new { @class = "control-label" })
            @Html.DropDownList("DayName", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.DayName, "", new { @class = "text-danger" })
        </div>
        <div class="col-sm-3">
            @Html.LabelFor(model => model.RoomID, htmlAttributes: new { @class = "control-label" })
            @Html.DropDownList("RoomID", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.RoomID, "", new { @class = "text-danger" })
        </div>
        <div class="col-sm-3">
            @Html.LabelFor(model => model.DurationID, htmlAttributes: new { @class = "control-label" })
            @Html.DropDownList("DurationID", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.DurationID, "", new { @class = "text-danger" })
            @Html.EditorFor(model => model.DurationMunutes, new { htmlAttributes = new { @class = "form-control", type = "hidden" } })
        </div>
        <div class="col-sm-3">
            @Html.LabelFor(model => model.StartingHour, htmlAttributes: new { @class = "control-label" })
            @Html.DropDownList("StartingHour", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.StartingHour, "", new { @class = "text-danger" })
        </div>
        <div class="col-sm-3">
            @Html.LabelFor(model => model.EndingHour, htmlAttributes: new { @class = "control-label" })
            @Html.DropDownList("EndingHour", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.EndingHour, "", new { @class = "text-danger" })
        </div>
        <div class="col-sm-3">
            @Html.LabelFor(model => model.IsActive, htmlAttributes: new { @class = "control-label" })
            @Html.DropDownList("IsActive", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-sm-3">
            <input type="submit" value="Add" class="btn btn-success" />
            <a href="@Url.Content("~/TimeSlots/Index")" class="btn btn-success">Refresh</a>
        </div>
    </div>
}
