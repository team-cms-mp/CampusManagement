
@model CampusManagement.Models.AlumniUserPhotoViewModel

@{
    ViewBag.Title = "Learning Subjects ";
    ////Layout = "~/Views/Shared/_MyLayout.cshtml";
}


@{
    if (Model.SelectedAlumniUserPhotos != null)
    {
        if (Model.DisplayMode == "Delete")
        {
            Html.RenderPartial("Delete", Model.SelectedAlumniUserPhotos);
        }
        else if (Model.DisplayMode == "ReadWrite")
        {
            Html.RenderPartial("Edit", Model.SelectedAlumniUserPhotos);
        }
    }
    if (Model.DisplayMode == "WriteOnly")
    {
        Html.RenderPartial("Create", new CampusManagement.Models.AlumniUserPhoto());
    }
}


<table class="table">
    <tr>
        <th>
            <input id="AlumniUserID" name="AlumniUserID" value="@ViewBag.AlumniUserID" type="hidden" />
            File
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SelectedAlumniUserPhotos.IsActive)
        </th>
        <th>Actions</th>
    </tr>

    @foreach (var item in Model.AlumniUserPhotos)
    {
        <tr>
            <td>
                <a href="@Url.Content(item.PhotoPath)" target="_blank">View Image</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @Html.ActionLink("Edit", "Update", new { id = item.AlumniUserPhotoID })
                @*@Html.ActionLink("Create Weeks", "CreateWeeks", new { LMSSubjectLearningID = item.LMSSubjectLearningID }, null) |
                    @Html.ActionLink("Learning Contents", "Index", "LmsWeeks", new { LMSSubjectLearningID = item.LMSSubjectLearningID }, null)*@
            </td>
        </tr>
    }

</table>


