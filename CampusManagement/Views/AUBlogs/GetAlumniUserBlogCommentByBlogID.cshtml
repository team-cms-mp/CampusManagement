

@model CampusManagement.Models.GetAlumniUserBlogCommentByBlogID_ResultViewModel

@{
    ViewBag.Title = "Alumni Education Expos";
    ////Layout = "~/Views/Shared/_MyLayout.cshtml";
}

@if (Model.AlumniUserBlogObj != null)
{
    // Upper Blog Design Single Object;
    <div class="row">
        <ul class="event-list">
            <li>
                <time datetime="2016-02-14">
                    <span class="day"><img src="@Url.Content(Model.AlumniUserBlogObj.Picture)" style="width:130px; height:120px; border-radius: 2px;" /></span>
                    <span style="display: block;font-size: 8pt;line-height: 1.7;padding-top: 3px;"><b style="color:black;">by </b> <b style="color:#025ea3">@Html.DisplayFor(modelItem => Model.AlumniUserBlogObj.UserName) </b> </span>
