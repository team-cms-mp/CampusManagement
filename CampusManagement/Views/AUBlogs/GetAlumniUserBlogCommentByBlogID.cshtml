<br />
@if (Model.GetAlumniUserBlogCommentByBlogID_Results != null)
{
    if (Model.GetAlumniUserBlogCommentByBlogID_Results.Count > 0)
    {
        // all comment of comments with photos here

        <div class="row">
            <ul class="event-list">
@using (Html.BeginForm("GetAlumniUserBlogCommentByBlogID", "AUBlogs", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(Model=> Model.AlumniUserBlogID)

                <li class="col-lg-12 col-sm-12 col-xs-12" style=" margin-top:-4em ;margin-bottom: 1em;; box-shadow:none">
                    <input id="AlumniUserBlogID" name="AlumniUserBlogID" value="@ViewBag.AlumniUserBlogID" type="hidden" />
                    <div class="col-lg-10 pull-left"><textarea placeholder="Add Comment Her...." type="text" style="border: none;border-bottom: 2px solid #337ab7;" class="col-lg-7 form-control" id="txtBlogCommet" name="txtBlogCommet"></textarea></div>
                    <div class="col-lg-2 pull-right" style="margin-top: 1em;"><input class="btn btn-primary" type="submit" value="Post Comment" /></div>
                </li>
}



                    @foreach (var item in Model.GetAlumniUserBlogCommentByBlogID_Results)
                    {
                        if (item.UserName != null)
                        {

                            <li style="padding-left: 1em; padding-bottom: 1em;" class="col-lg-12 col-xs-12 col-sm-12 col-md-12">
                                <time style="width: 70px;height: 70px;padding: 0px;margin: 0px; box-shadow:none" pull-left>
                                    <span class="day"><img src="@Url.Content(item.Picture)" style="width:70px; height:70px;border-radius: 40px;" /></span>
                                </time>
                                <div class="info" style="height: 70px;overflow-y: scroll;">
                                    <p style="display: block;font-size: 8pt;line-height: 1.7;padding-top: 3px;"> <b style="color: #025ea3;padding: 11px; background: #eeeeee;     border-radius: 5px;">@Html.DisplayFor(modelItem => item.UserName) </b> </p>
                                    <p class="desc" style="margin-top: -1%;"> <span class="glyphicon glyphicon-comment"></span> @Html.DisplayFor(modelItem => item.BlogComment)</p>
                                </div>
                             </li>


                                }
                                else
                                {

                <li style="padding-left: 1em; padding-bottom: 1em; " class="col-lg-12">
                    <time style="width: 70px;border-radius: 30px;height: 70px;padding: 0px;margin: 0px; box-shadow:none">
                        @{
                            var base64 = "";
                            var imgSrc = "";
                            if (item.PictureCMS != null)
                            {
                                base64 = Convert.ToBase64String(item.PictureCMS);
                                imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                            }

                        }

                        <span class="day" style="background-color: snow;"><img src="@imgSrc" style="width:70px; height:70px; border-radius: 40px; background-color: snow;" /></span>
                    </time>
                    <div class="info" style="height: 70px;overflow-y: scroll;">
                        <p style="display: block;font-size: 8pt;line-height: 1.7;padding-top: 3px;"> <b style="color: #025ea3;padding: 11px; background: #eeeeee;     border-radius: 5px;">@Html.DisplayFor(modelItem => item.UserNameCMS) </b> </p>
                        <p class="desc" style="margin-top: -1%;"> <span class="glyphicon glyphicon-comment"></span> @Html.DisplayFor(modelItem => item.BlogComment)</p>
                    </div>
                </li>



                    }




                    }
                

            </ul>
        </div>

                                            
                                        }

                                    }


