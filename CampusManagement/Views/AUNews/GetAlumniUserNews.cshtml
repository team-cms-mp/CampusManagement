

@model CampusManagement.Models.GetAlumniUserNews_ResultViewModel

@{
    ViewBag.Title = "Alumni Education Expos";
    ////Layout = "~/Views/Shared/_MyLayout.cshtml";
}

<div class="row">
    <h2><span class="col-sm-12">News</span></h2>
</div>
<hr style="border-top: 1px solid #6d9b90;" />

@foreach (var item in Model.GetAlumniUserNews_Results)
{

    <div class="row">
        <ul class="event-list">
            <li>
                <time datetime="2016-02-14">
                    @if (item.UserName != null)
                    {
                    <span class="day"><img src="@Url.Content(item.Picture)" style="width:130px; height:120px; border-radius: 2px;" /></span>
                    }
                    else
                    {
                        <span class="day"><img src="~/DegreeDocument/no-profile.jpg" style="width:130px; height:120px; border-radius: 2px;" /></span>
                    }
                    <span style="display: block;font-size: 8pt;line-height: 1.7;padding-top: 3px;"><b style="color:black;">by </b> <b style="color:#025ea3">@Html.DisplayFor(modelItem => item.UserName) </b> </span>
                </time>
                <div class="info item">
                    <h2 class="title" style="margin-bottom: 5px;"><u>@Html.DisplayFor(modelItem => item.NewsTitle)</u></h2>
                    <button type="button" class="btn btn-primary show toggleDetails" style="float: right;margin-top: -2em;margin-right: 1em;">Read More...</button>
                    <p class="desc"> <span class="glyphicon glyphicon-time"></span> @Html.DisplayFor(modelItem => item.CreatedOn)</p>
                    <p class="desc"><span class="glyphicon glyphicon-eye-open"></span> @Html.DisplayFor(modelItem => item.NewsContent)</p>
                    @*<div class="details hidden">
                        <p class="desc"> @Html.DisplayFor(modelItem => item.NewsContent)</p>
                    </div>*@
                </div>


            </li>
        </ul>
    </div>
}


<style>
    .item{
  border:1px solid #efefef;
}
.hidden{
  display:none;
}
    .event-list {
        list-style: none;
        font-family: 'Lato', sans-serif;
        margin: 0px;
        padding: 0px;
    }

        .event-list > li {
            background-color: rgb(255, 255, 255);
            box-shadow: 0px 0px 5px rgb(51, 51, 51);
            box-shadow: 0px 0px 5px rgba(51, 51, 51, 0.7);
            padding: 0px;
            margin: 0px 0px 20px;
            cursor: pointer;
        }

            .event-list > li > time {
                display: inline-block;
                width: 100%;
                color: rgb(255, 255, 255);
                background-color: rgba(222, 222, 222, 0.52);
                padding: 5px;
                text-align: center;
                text-transform: uppercase;
            }

            .event-list > li:nth-child(even) > time {
                background-color: rgb(165, 82, 167);
            }

            .event-list > li > time > span {
                display: none;
            }

            .event-list > li > time > .day {
                display: block;
                font-size: 16pt;
                font-weight: 600;
                line-height: 1.7;
            }

            .event-list > li time > .month {
                display: block;
                font-size: 24pt;
                font-weight: 900;
                line-height: 1;
            }

            .event-list > li > img {
                width: 100%;
            }

            .event-list > li > .info {
                padding-top: 5px;
                text-align: center;
            }

                .event-list > li > .info > .title {
                    font-size: 17pt;
                    font-weight: 700;
                    margin: 0px;
                }

                .event-list > li > .info > .desc {
                    font-size: 13pt;
                    font-weight: 300;
                    margin: 0px;
                }

                .event-list > li > .info > ul,
                .event-list > li > .info > ul > li > a {
                    display: block;
                    width: 100%;
                    color: rgb(30, 30, 30);
                    text-decoration: none;
                }


            .event-list > li > time,
            .event-list > li > img {
                display: inline-block;
            }

            .event-list > li > time,
            .event-list > li > img {
                width: 150px;
                float: left;
            }

            .event-list > li > .info {
                background-color: rgba(245, 245, 245, 0.43);
                overflow: hidden;
            }

            .event-list > li > time,
            .event-list > li > img {
                width: 130px;
                box-shadow: 2px 0px 5px rgba(51, 51, 51, 0.7);
                height: 150px;
                padding: 0px;
                margin: 0px;
            }

            .event-list > li > .info {
                position: relative;
                height: 150px;
                text-align: left;
                padding-left: 12px;
            }

                .event-list > li > .info > .title,
                .event-list > li > .info > .desc {
                    padding: 0px 10px;
                    color: #555;
                }

                .event-list > li > .info > ul {
                    position: absolute;
                    left: 0px;
                    bottom: 0px;
                }
</style>

<script>
    [].slice.call(document.querySelectorAll('.toggleDetails')).forEach(function (e) {
        e.onclick = function () {
            

            if($(this).parent().css("overflow-y") == "scroll")
            {
                $(this).parent().css("overflow-y", "hidden");
            }
            else
            {
                $(this).parent().css("overflow-y", "scroll");
            }
        }
    })

</script>

