@model CampusManagement.Models.LMSWeek

@using (Html.BeginForm("CreateWeeks", "LmsOfTeacher", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="row">
        <h2><span class="col-sm-12">Create Weeks</span></h2>
    </div>
    <hr style="border-top: 1px solid #6d9b90;" />
    @Html.Partial("_MessageView")

    <div class="row">
        <div class="col-sm-4">
            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", required = "required" } })
            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
        </div>

        <div class="col-sm-4">
            @Html.LabelFor(model => model.TopicText, htmlAttributes: new { @class = "control-label" })
            @Html.TextBoxFor(model => model.TopicText, new { @class = "form-control", required = "required" })
            @Html.ValidationMessageFor(model => model.TopicText, "", new { @class = "text-danger" })
        </div>
        <div class="col-sm-4">
            @Html.LabelFor(model => model.IsActive, htmlAttributes: new { @class = "control-label" })
            @Html.DropDownList("IsActive", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })
            @Html.EditorFor(model => model.LMSSubjectLearningID, new { htmlAttributes = new { @class = "form-control", @type = "hidden" } })
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-sm-3">
            <input type="submit" value="Add" class="btn btn-primary" />
        </div>
    </div>
}

<script>
 $(document).ready(function () {

        $("#Title").val("");
        $("#TopicText").val("");

     });
</script>
