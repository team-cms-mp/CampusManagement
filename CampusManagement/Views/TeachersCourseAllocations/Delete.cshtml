@model CampusManagement.Models.TeachersCourseAllocation
@using CampusManagement.Models
<h4 class="alert alert-info">Are you sure you want to delete this?</h4>
@{
    ModelCMSNewContainer dbc = new ModelCMSNewContainer();
    GetDisplayValues_Result dv = dbc.GetDisplayValues(0, Model.ProgramCourseID).FirstOrDefault();
    um_GetEmployees_ByID_Result emp = dbc.um_GetEmployees_ByID(Model.TeacherID).FirstOrDefault();
}
<div>
    <dl class="dl-horizontal">
        <dt>
            <label class="control-label">Lecturer</label>
        </dt>

        <dd>
            @Html.Raw(emp.EmployeeName)
        </dd>

        <dt>
            <label class="control-label">Program</label>
        </dt>

        <dd>
            
            @Html.Raw(dv.ProgramName)
        </dd>

        <dt>
            <label class="control-label">Subject</label>
        </dt>

        <dd>
            @Html.Raw(dv.CourseName)
        </dd>

        <dt>
            <label class="control-label">@Html.DisplayNameFor(model => model.IsActive)</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IsActive)
        </dd>

        <dt>
            <label class="control-label">@Html.DisplayNameFor(model => model.CreatedOn)</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatedOn)
        </dd>

        <dt>
            <label class="control-label">@Html.DisplayNameFor(model => model.CreatedBy)</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatedBy)
        </dd>

        <dt>
            <label class="control-label">@Html.DisplayNameFor(model => model.ModifiedOn)</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ModifiedOn)
        </dd>
        <dt>
            <label class="control-label">@Html.DisplayNameFor(model => model.ModifiedBy)</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ModifiedBy)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-primary" />
            <a href="@Url.Content("~/TeachersCourseAllocations/Index")" class="btn btn-primary">Cancel</a>
        </div>
    }
</div>
