@model CampusManagement.Models.TeachersCourseAllocation

@using (Html.BeginForm("Create", "TeachersCourseAllocations", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="row">
        <h2><span class="col-sm-12">Add Lecturer Subject</span></h2>
    </div>
    <hr style="border-top: 1px solid #6d9b90;" />
    @Html.Partial("_MessageView")

    <div class="row">
        <div class="col-sm-12">
            <label class="control-label">Department</label>
            <select id="cmbDepartment" name="cmbDepartment" class="form-control"></select>
        </div>
        <div class="col-sm-4">
            <label class="control-label">Lecturer</label>
            <select id="TeacherID" name="TeacherID" class="form-control"></select>
        </div>
        <div class="col-sm-8">
            @Html.LabelFor(model => model.ProgramCourseID, "Subject", htmlAttributes: new { @class = "control-label" })
            @Html.DropDownList("ProgramCourseID", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ProgramCourseID, "", new { @class = "text-danger" })
        </div>
        <div class="col-sm-3">
            @Html.LabelFor(model => model.IsActive, htmlAttributes: new { @class = "control-label" })
            @Html.DropDownList("IsActive", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-sm-3">
            <input type="submit" value="Add" class="btn btn-primary" />
            <a href="@Url.Content("~/TeachersCourseAllocations/Index")" class="btn btn-primary">Refresh</a>
        </div>
    </div>
}
