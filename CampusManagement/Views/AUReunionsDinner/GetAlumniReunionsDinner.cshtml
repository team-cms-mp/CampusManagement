@model CampusManagement.Models.GetAlumniReunionsDinner_ResultViewModel

@{
    ViewBag.Title = "Alumni Reunions Dinner";
    ////Layout = "~/Views/Shared/_MyLayout.cshtml";
}

<div class="row">
    <h2><span class="col-sm-12">Reunion Dinners</span></h2>
</div>
<hr style="border-top: 1px solid #6d9b90;" />

@foreach (var item in Model.GetAlumniReunionsDinner_Results)
{
    string EducationExpoStartDateTime = item.ReunionsDinnerStartDateTime.Value.ToString("ddd, dd MMMM yyyy");

    <div class="row">
        <ul class="event-list">
            <li>
                <time datetime="2016-02-14">
                    <span class="day">@EducationExpoStartDateTime</span>
                </time>
                <!-- <img alt="Independence Day" src="https://farm4.staticflickr.com/3100/2693171833_3545fb852c_q.jpg" /> -->
                <div class="info">
                    <h2 class="title" style="margin-bottom: 5px;"><u>@Html.DisplayFor(modelItem => item.ReunionsDinnerTitle)</u></h2>
                    <p class="desc"> <span class="glyphicon glyphicon-list-alt"></span> @Html.DisplayFor(modelItem => item.ReunionsDinnerDetails)</p>
                    <p class="desc"><span class="glyphicon glyphicon-map-marker"></span> @Html.DisplayFor(modelItem => item.ReunionsDinnerLocation)</p>
                    <p class="desc"><span class="glyphicon glyphicon-user"></span> @Html.DisplayFor(modelItem => item.UserName) &nbsp; <span class="glyphicon glyphicon-calendar"></span> @Html.DisplayFor(modelItem => item.CreatedOn) &nbsp; <span class="glyphicon glyphicon-time"></span> @Html.DisplayFor(modelItem => item.ReunionsDinnerEndDateTime)</p>
                </div>

            </li>
        </ul>
    </div>



}

<style>
    .event-list {
        list-style: none;
        font-family: 'Lato', sans-serif;
        margin: 0px;
        padding: 0px;
    }

        .event-list > li {
            background-color: rgb(255, 255, 255);
            box-shadow: 0px 0px 5px rgb(51, 51, 51);
            box-shadow: 0px 0px 5px rgba(51, 51, 51, 0.7);
            padding: 0px;
            margin: 0px 0px 20px;
            cursor: pointer;
        }

            .event-list > li > time {
                display: inline-block;
                width: 100%;
                color: rgb(255, 255, 255);
                background-color: rgb(2, 104, 171);
                padding: 5px;
                text-align: center;
                text-transform: uppercase;
            }

            .event-list > li:nth-child(even) > time {
                background-color: rgb(165, 82, 167);
            }

            .event-list > li > time > span {
                display: none;
            }

            .event-list > li > time > .day {
                display: block;
                font-size: 16pt;
                font-weight: 600;
                line-height: 1.7;
                margin-top: 3%;
            }

            .event-list > li time > .month {
                display: block;
                font-size: 24pt;
                font-weight: 900;
                line-height: 1;
            }

            .event-list > li > img {
                width: 100%;
            }

            .event-list > li > .info {
                padding-top: 5px;
                text-align: center;
            }

                .event-list > li > .info > .title {
                    font-size: 17pt;
                    font-weight: 700;
                    margin: 0px;
                }

                .event-list > li > .info > .desc {
                    font-size: 13pt;
                    font-weight: 300;
                    margin: 0px;
                }

                .event-list > li > .info > ul,
                .event-list > li > .info > ul > li > a {
                    display: block;
                    width: 100%;
                    color: rgb(30, 30, 30);
                    text-decoration: none;
                }


            .event-list > li > time,
            .event-list > li > img {
                display: inline-block;
            }

            .event-list > li > time,
            .event-list > li > img {
                width: 150px;
                float: left;
            }

            .event-list > li > .info {
                background-color: rgba(245, 245, 245, 0.43);
                overflow: hidden;
            }

            .event-list > li > time,
            .event-list > li > img {
                width: 150px;
                height: 125px;
                padding: 0px;
                margin: 0px;
            }

            .event-list > li > .info {
                position: relative;
                height: 125px;
                text-align: left;
                padding-right: 40px;
            }

                .event-list > li > .info > .title,
                .event-list > li > .info > .desc {
                    padding: 0px 10px;
                    color: #555;
                }

                .event-list > li > .info > ul {
                    position: absolute;
                    left: 0px;
                    bottom: 0px;
                }
</style>
