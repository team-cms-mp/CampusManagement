@using CampusManagement.Models
<!DOCTYPE html>
<html lang="en">

<head>
    <title>4S Campus Connect</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- CSS -->
    <link href="@Url.Content("~/Content/Login2/fonts/font-awesome-4.7.0/css/font-awesome.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/Login2/css/main.css")" rel="stylesheet" />
    <script src="@Url.Content("~/Scripts/jquery-1.10.2.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.10.0.min.js")"></script>
    <script src="@Url.Content("~/Scripts/mask.js")"></script>
    <script src="@Url.Content("~/Scripts/Common.js")"></script>
</head>
<body style="background-color: #666666;">
    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
               
                <div class="login100-more" style="width: 100%; height: 90%;">
                    <img src="@Url.Content(@MvcApplication.CampusBackground)" class="img-responsive" style="width: 100%; height: 661px" />

                </div>
                @{
                    ModelCMSNewContainer dbm = new ModelCMSNewContainer();
                    GetActiveSessionAndTest_Result st = dbm.GetActiveSessionAndTest().FirstOrDefault();
                    int Designation_ID = Convert.ToInt32(Session["Designation_ID"]);
                }
@if (Designation_ID == 57 || Designation_ID == 35 || Designation_ID == 36 || Designation_ID == 34 || Designation_ID == 26 || Designation_ID == 27 || Designation_ID == 20 || Designation_ID == 16
                                         || Designation_ID == 11 || Designation_ID == 12 || Designation_ID == 13 || Designation_ID == 14 || Designation_ID == 15 || Designation_ID == 9 || Designation_ID == 7 || Designation_ID == 3 || Designation_ID == 44)
{
    <div class="row">
        <div class="col-sm-12" style="text-align:right;">
            <span style="font-weight:bold;font-size:large;background-color:#00d0ff;">Current Session : @st.ActiveSessionName, Active Test : @st.ActiveEntryTestName</span>
        </div>
    </div>
}

               
                @RenderBody()
            </div>
        </div>
    </div>

    <!-- JS -->
    <script src="@Url.Content("~/Content/Login2/js/jquery-3.2.1.min.js")"></script>
    <script src="@Url.Content("~/Content/Login2/js/main.js")"></script>
</body>
</html>