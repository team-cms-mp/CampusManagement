@model CampusManagement.Models.AlumniUserCareer

@using (Html.BeginForm("Edit", "AUCareers", FormMethod.Post, new { enctype = "multipart/form-data" }) )
{
    @Html.AntiForgeryToken()

    <div class="row">
        <h2><span class="col-sm-12">Edit Career</span></h2>
    </div>
    <hr style="border-top: 1px solid #6d9b90;" />
    @Html.HiddenFor(model => model.AlumniUserCareerID)

    <div class="row">
        <div class="col-sm-4">
            @Html.LabelFor(model => model.CareerTitle, htmlAttributes: new { @class = "control-label" })
            @Html.TextBoxFor(model => model.CareerTitle, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.CareerTitle, "", new { @class = "text-danger" })
        </div>

        <div class="col-sm-4">
            @Html.LabelFor(model => model.LastDateApply, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.LastDateApply, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
            @Html.ValidationMessageFor(model => model.LastDateApply, "", new { @class = "text-danger" })
        </div>
        @*<div class="editor-field col-sm-4">
            @Html.LabelFor(model => model.LastDateApply, htmlAttributes: new { @class = "control-label" })
            @Html.TextBoxFor(model => model.LastDateApply, new { @class = "form-control", @type = "datetime-local"})
            @Html.ValidationMessageFor(model => model.LastDateApply)
        </div>*@
        <div class="col-sm-4">
            @Html.LabelFor(model => model.IsActive, htmlAttributes: new { @class = "control-label" })
            @Html.DropDownList("IsActive", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })
        </div>
        <div class="col-sm-6">
            @Html.LabelFor(model => model.SalaryFrom, htmlAttributes: new { @class = "control-label" })
            @Html.TextBoxFor(model => model.SalaryFrom, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.SalaryFrom, "", new { @class = "text-danger" })
        </div>
        <div class="col-sm-6">
            @Html.LabelFor(model => model.SalaryTo, htmlAttributes: new { @class = "control-label" })
            @Html.TextBoxFor(model => model.SalaryTo, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.SalaryTo, "", new { @class = "text-danger" })
        </div>

        <div class="col-sm-12">
            @Html.LabelFor(model => model.CareerDiscription, htmlAttributes: new { @class = "control-label" })
            @Html.TextAreaFor(model => model.CareerDiscription, new { @class = "form-control", @style = "height: 10em;" })
            @Html.ValidationMessageFor(model => model.CareerDiscription, "", new { @class = "text-danger" })
        </div>

        <div class="col-sm-12">
            @Html.EditorFor(model => model.CreatedOn, new { htmlAttributes = new { @class = "form-control", type = "hidden" } })
            @Html.EditorFor(model => model.CreatedBy, new { htmlAttributes = new { @class = "form-control", type = "hidden" } })
            <input id="AlumniUserID" name="AlumniUserID" value="@ViewBag.AlumniUserID" type="hidden" />
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-sm-3">
            <input type="submit" value="Save" class="btn btn-primary" />
            <a href="@Url.Content("~/AUBlogs/Index")" class="btn btn-primary">Cancel</a>
        </div>
    </div>
}

