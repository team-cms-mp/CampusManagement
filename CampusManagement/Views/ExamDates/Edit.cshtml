@model CampusManagement.Models.ExamDate
@using CampusManagement.Models
@using (Html.BeginForm("Edit", "ExamDates", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="row">
        <h1><span class="col-sm-12">@{
            ModelCMSNewContainer dbc = new ModelCMSNewContainer();
            Exam nt = dbc.Exams.FirstOrDefault(bp => bp.ExamID == Model.ExamID);
            @Html.Raw(nt.ExamTitle)
        } :</span></h1>
    </div>
    <div class="row">
        <h2><span class="col-sm-12">Edit Days</span></h2>
    </div>
    <hr style="border-top: 1px solid #6d9b90;" />
    @Html.Partial("_MessageView")
    @Html.HiddenFor(model => model.ExamDateID)
    @Html.HiddenFor(model => model.ExamID)
    <div class="row">

      

        <div class="col-sm-3">
            @Html.LabelFor(model => model.ExamDateTitle, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.ExamDateTitle, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
            @Html.ValidationMessageFor(model => model.ExamDateTitle, "", new { @class = "text-danger" })

        </div>

        <div class="col-sm-3">
            @Html.LabelFor(model => model.IsActive, htmlAttributes: new { @class = "control-label" })
            @Html.DropDownList("IsActive", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })
            @Html.EditorFor(model => model.CreatedOn, new { htmlAttributes = new { @class = "form-control", type = "hidden" } })
            @Html.EditorFor(model => model.CreatedBy, new { htmlAttributes = new { @class = "form-control", type = "hidden" } })
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-sm-12">
            <input type="submit" value="Save" class="btn btn-primary" />
            @Html.ActionLink("Refresh", "Index", "ExamDates", new { ExamID = ViewBag.hdnExamID }, new { @class = "btn btn-primary" })
            @Html.ActionLink("Back to Exam", "Index", "Exams", new { ExamID = ViewBag.hdnExamID }, new { @class = "btn btn-primary" })
           
        </div>
    </div>
}

