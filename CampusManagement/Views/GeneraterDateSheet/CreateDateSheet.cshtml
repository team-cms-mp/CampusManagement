                            }
                          
                        </div>
                        <div class="col-sm-3">
                            @if (hideSem7cb == true)
                            {
                                @Html.CheckBoxFor(Model => Model.Semister7, new { @class = "checkbox-inline", @style = "width:20px;height:20px", @disabled = "disabled" })<label style="text-align:center;margin-left:10px">Semester(7) <span style="color:red"> All Ready Added To Some Slot</span>  </label>
                            }
                            else
                            {
                                @Html.CheckBoxFor(Model => Model.Semister7, new { @class = "checkbox-inline", @style = "width:20px;height:20px" })<label style="text-align:center;margin-left:10px">Semester(7)</label>
                            }
                          
                        </div>
                        <div class="col-sm-3">
