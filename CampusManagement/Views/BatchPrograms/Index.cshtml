@model CampusManagement.Models.GetBatchPrograms_ResultViewModel
@using CampusManagement.Models
@{
    ViewBag.Title = "Session Programs";
    ////Layout = "~/Views/Shared/_MyLayout.cshtml";
}
<div class="row">
    <div class="col-sm-12 ">
        <a href="@Url.Content("~/SystemSettings/Campus")" class="btn btn-primary pull-right">Back</a>
    </div>
</div>
@{
    if (Model.SelectedGetBatchPrograms_Result != null)
    {
        if (Model.DisplayMode == "Delete")
        {
            Html.RenderPartial("Delete", Model.SelectedGetBatchPrograms_Result);
        }
        else if (Model.DisplayMode == "ReadWrite")
        {
            Html.RenderPartial("Edit", Model.SelectedGetBatchPrograms_Result);
        }
    }
    if (Model.DisplayMode == "WriteOnly")
    {
        Html.RenderPartial("Create", new CampusManagement.Models.GetBatchPrograms_Result());
    }
}
@using (Html.BeginForm("Index", "BatchPrograms", FormMethod.Post))
{
    <div class="row" style="margin-top: -2em;margin-bottom: -2em;">
        <div class="col-sm-5 inner-addon right-addon">
            <input type="text" class="form-control" placeholder="search" name="Search" />
        </div>
        <div class="col-sm-1">
            <button type="submit" class="btn btn-primary" value="Search">
                <span class="glyphicon glyphicon-search"></span> Search
            </button>
        </div>
    </div>
}
<table class="table">
    <tr>
        <th>
            Session
        </th>
        <th>
            Program
        </th>
        <th>
            Active
        </th>
        <th>Actions</th>
    </tr>

    @foreach (var item in Model.GetBatchPrograms_Results)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BatchName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProgramName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @Html.ActionLink("Edit", "Update", new { id = item.BatchProgramID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.BatchProgramID })
            </td>
        </tr>
    }

</table>

