@model CampusManagement.Models.BatchProgram

<h4 class="alert alert-info">Are you sure you want to delete this?</h4>

<div>
    <dl class="dl-horizontal">
        <dt>
            <label class="control-label">@Html.DisplayNameFor(model => model.BatchID)</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Batch.BatchName)
        </dd>

        <dt>
            <label class="control-label">@Html.DisplayNameFor(model => model.ProgramID)</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Program.ProgramName)
        </dd>

        <dt>
            <label class="control-label">@Html.DisplayNameFor(model => model.ProgramFees)</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProgramFees)
        </dd>

        <dt>
            <label class="control-label">@Html.DisplayNameFor(model => model.StartDate)</label>
        </dt>

        <dd>
            @{ 
                string stDate = "";
                if (Model.StartDate != null)
                {
                    stDate = Model.StartDate.Value.ToShortDateString();
                }
            }
            @Html.Raw(stDate)
        </dd>

        <dt>
            <label class="control-label">@Html.DisplayNameFor(model => model.EndDate)</label>
        </dt>

        <dd>
            @{
                string endDate = "";
                if (Model.EndDate != null)
                {
                    endDate = Model.EndDate.Value.ToShortDateString();
                }
            }
            @Html.Raw(endDate)
        </dd>

        <dt>
            <label class="control-label">@Html.DisplayNameFor(model => model.IsActive)</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IsActive)
        </dd>

        <dt>
            <label class="control-label">@Html.DisplayNameFor(model => model.CreatedOn)</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatedOn)
        </dd>

        <dt>
            <label class="control-label">@Html.DisplayNameFor(model => model.CreatedBy)</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatedBy)
        </dd>

        <dt>
            <label class="control-label">@Html.DisplayNameFor(model => model.ModifiedOn)</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ModifiedOn)
        </dd>
        <dt>
            <label class="control-label">@Html.DisplayNameFor(model => model.ModifiedBy)</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ModifiedBy)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-success" />
            <a href="@Url.Content("~/BatchPrograms/Index")" class="btn btn-success">Cancel</a>
        </div>
    }
</div>
