@model CampusManagement.Models.TeacherUpload
@using CampusManagement.Models
<h4 class="alert alert-info">Are you sure you want to delete this?</h4>

<div>
    <dl class="dl-horizontal">
        <dt>
            <label class="control-label">Lecture/Assignment/Quiz Name</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TeacherUploadName)
        </dd>
        <dt>
            <label class="control-label">Type</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TeacherUploadType)
        </dd>
        <dt>
            <label class="control-label">Submisson Date</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SubmissonDate)
        </dd> 
        <dt>
            <label class="control-label">File</label>
        </dt>

        <dd>
            <img id="imgView" src="@Url.Content(Model.UploadPath)" style="width:100px;height:100px;border-radius:10px;" />
        </dd>

        <dt>
            <label class="control-label">@Html.DisplayNameFor(model => model.IsActive)</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IsActive)
        </dd>


        <dt>
            <label class="control-label">@Html.DisplayNameFor(model => model.CreatedOn)</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatedOn)
        </dd>

        <dt>
            <label class="control-label">@Html.DisplayNameFor(model => model.CreatedBy)</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatedBy)
        </dd>

        <dt>
            <label class="control-label">@Html.DisplayNameFor(model => model.ModifiedOn)</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ModifiedOn)
        </dd>
        <dt>
            <label class="control-label">@Html.DisplayNameFor(model => model.ModifiedBy)</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ModifiedBy)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <br />
       
        <div class="row">
            <div class="col-sm-3">
                <input type="submit" value="Delete" class="btn btn-primary" />
                <a href="@Url.Content("~/TeacherUploads/Index")" class="btn btn-primary">Cancel</a>
            </div>
        </div>
    }
</div>
