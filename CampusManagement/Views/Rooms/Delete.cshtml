@model CampusManagement.Models.SP_roomForPage_Result

<h4 class="alert alert-info">Are you sure you want to delete this?</h4>

<div>
    <dl class="dl-horizontal">
        <dt>
            <label class="control-label">Room Type</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RoomTypeName)
        </dd>

        <dt>
            <label class="control-label">Room Name</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RoomName)
        </dd>

        <dt>
            <label class="control-label">Room Capacity</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RoomCapacity)
        </dd>

        <dt>
            <label class="control-label">Description</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RoomDescription)
        </dd>

        <dt>
            <label class="control-label">Is Active</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IsActive)
        </dd>

        <dt>
            <label class="control-label">Created On</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatedOn)
        </dd>

        <dt>
            <label class="control-label">Created By</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CB_Username)
        </dd>

        <dt>
            <label class="control-label">Modified On</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ModifiedOn)
        </dd>
        <dt>
            <label class="control-label">Modified By</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MB_Username)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-primary" />
            <a href="@Url.Content("~/Rooms/Index")" class="btn btn-primary">Cancel</a>
        </div>
    }
</div>
