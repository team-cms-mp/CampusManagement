@model CampusManagement.Models.LMSQuizIQuestionViewModel
@using CampusManagement.Models

@{
    ViewBag.Title = "Learning Subjects ";
    ////Layout = "~/Views/Shared/_MyLayout.cshtml";
}


@{
    if (Model.SelectedLMSQuizIQuestions != null)
    {
        if (Model.DisplayMode == "Delete")
        {
            Html.RenderPartial("Delete", Model.SelectedLMSQuizIQuestions);
        }
        else if (Model.DisplayMode == "ReadWrite")
        {
            Html.RenderPartial("Edit", Model.SelectedLMSQuizIQuestions);
        }
    }
    if (Model.DisplayMode == "WriteOnly")
    {
        Html.RenderPartial("Create", new CampusManagement.Models.LMSQuizIQuestion());
    }
    ModelCMSNewContainer dbc = new ModelCMSNewContainer();
}




<table class="table">
  
    @foreach (var item in Model.LMSQuizIQuestions)
    {
        LMSQuestionType sc = dbc.LMSQuestionTypes.FirstOrDefault(s => s.LMSQuestionTypeID == item.LMSQuestionTypeID);
        <tr>
            <td colspan="4">
                <hr style="border: 0;height: 0; box-shadow:0 0 10px 1px #a6a6a6;">
            </td>
        </tr>
        <tr>
            <td>
                <label>Type :</label>
         
                @Html.Raw(sc.QuestionTypeName)

            </td>
            <td>
                <label>Marks :</label>
           
                @Html.DisplayFor(modelItem => item.QuestionMarks)
            </td>
            <td>
                <label>Is Active :</label>

                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td >
            <label>Actions :</label>
           
                @Html.ActionLink("Edit", "Update", new { id = item.LMSQuizIQuestionD })
                @*@Html.ActionLink("   Add Questions", "Index", "LmsQuiz", new { LMSQuizID = item.LMSQuizID }, null)
            @Html.ActionLink("Create Weeks", "CreateWeeks", new { LMSSubjectLearningID = item.LMSQuizID }, null)*@
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <label>Question :</label>
        
                    @Html.DisplayFor(modelItem => item.AskedQuestion)
                </td>
           
            

            </tr>
            if (item.LMSQuestionTypeID == 1)
            {
            <tr>
                <td>
                    <b>
                        <span>Question Options</span>
                    </b><br />
                    <b><span> a: </span></b><label>@Html.DisplayFor(modelItem => item.QuestionMCQ1) </label> <br />
                    <b><span> b: </span></b><label>@Html.DisplayFor(modelItem => item.QuestionMCQ2) </label> <br />
                    <b><span> c: </span></b><label>@Html.DisplayFor(modelItem => item.QuestionMCQ3) </label> <br />
                    <b><span> d: </span></b><label>@Html.DisplayFor(modelItem => item.QuestionMCQ4) </label>
               </td>
                <td>
                    <b>
                        <span> Answers Options</span>
                    </b><br />

                    <input type="checkbox" disabled   class="checkbox-inline" id="AnswerMCQ1" name="AnswerMCQ1" checked="@item.AnswerMCQ1" style="height: 15px; width: 15px;"> <b><span>@item.AnswerMCQTitle1</span></b>   <br />
                    <input type="checkbox" disabled  class="checkbox-inline" id="AnswerMCQ2" name="AnswerMCQ2" checked="@item.AnswerMCQ2" style="height: 15px; width: 15px;"> <b> <span>@item.AnswerMCQTitle2</span></b> <br />
                    <input type="checkbox" disabled  class="checkbox-inline" id="AnswerMCQ3" name="AnswerMCQ3" checked="@item.AnswerMCQ3" style="height: 15px; width: 15px;"> <b><span>@item.AnswerMCQTitle3</span></b>  <br />
                    <input type="checkbox" disabled  class="checkbox-inline" id="AnswerMCQ4" name="AnswerMCQ4" checked="@item.AnswerMCQ4" style="height: 15px; width: 15px;"> <b><span>@item.AnswerMCQTitle4</span></b>
                </td>
            </tr>


        }
        else if (item.LMSQuestionTypeID == 2)
        {


            <tr>
                <td>
                    <b>
                        <span>Question Options</span>
                    </b><br />
                    <b><span> a: </span></b><label>@Html.DisplayFor(modelItem => item.QuestionSCQ1) </label> <br />
                    <b><span> b: </span></b><label>@Html.DisplayFor(modelItem => item.QuestionSCQ2) </label> <br />
                    <b><span> c: </span></b><label>@Html.DisplayFor(modelItem => item.QuestionSCQ3) </label> <br />
                    <b><span> d: </span></b><label>@Html.DisplayFor(modelItem => item.QuestionSCQ4) </label>
                </td>
                <td>
                    <b>
                        <span> Answers Options</span>
                    </b><br />

                    <input type="radio" disabled  class="checkbox-inline" id="rdAnswerSCQ1" name="AnswerSCQ" checked="@item.AnswerSCQ1" style="height: 15px; width: 15px;"> <b><span>@item.AnswerSCQTitle1</span></b>   <br />
                    <input type="radio" disabled class="checkbox-inline" id="rdAnswerSCQ2" name="AnswerSCQ" checked="@item.AnswerSCQ2" style="height: 15px; width: 15px;"> <b> <span>@item.AnswerSCQTitle2</span></b> <br />
                    <input type="radio" disabled class="checkbox-inline" id="rdAnswerSCQ3" name="AnswerSCQ" checked="@item.AnswerSCQ3" style="height: 15px; width: 15px;"> <b><span>@item.AnswerSCQTitle3</span></b>  <br />
                    <input type="radio" disabled class="checkbox-inline" id="rdAnswerSCQ4" name="AnswerSCQ" checked="@item.AnswerSCQ4" style="height: 15px; width: 15px;"> <b><span>@item.AnswerSCQTitle4</span></b>
                </td>
            </tr>


        }
        else
        {
            <tr>
                <td>
                    <b>
                        <span>Question Options</span>
                    </b><br />
                    <b><span> Option True: </span></b><label>@Html.DisplayFor(modelItem => item.QuestionTrueTitle) </label> <br />
                    <b><span> Option False: </span></b><label>@Html.DisplayFor(modelItem => item.QuestionFalseTitle) </label> <br />
                   
                </td>
                <td>
                    <b>
                        <span> Answers Options</span>
                    </b><br />

                    <input type="radio" disabled class="checkbox-inline" id="rdAnswerTrueFalse" name="AnswerTrueFalse" checked="@item.AnswerTrueFalse" style="height: 15px; width: 15px;">  <br />
                    
                </td>
            </tr>


            @*<tr>
                <td>
                    <label>@Html.DisplayFor(modelItem => item.QuestionTrueTitle) :</label>

                    <b>@Html.DisplayFor(modelItem => item.QuestionTrueTitle)</b>
                </td>
                <td>
                    <label>@Html.DisplayFor(modelItem => item.QuestionFalseTitle) :</label>

                    <b>@Html.DisplayFor(modelItem => item.QuestionFalseTitle)</b>
                </td>
                <td colspan="2">
                    <label>@Html.DisplayFor(modelItem => item.QuestionTrueTitle) :</label>
                    <span>@item.AnswerTrueFalse</span>
                </td>
            </tr>*@
        }
    }

</table>

