@using CampusManagement.Models
@{
    ViewBag.Title = "Change Password";
    ////Layout = "~/Views/Shared/_MyLayout.cshtml";
    ModelCMSNewContainer db = new ModelCMSNewContainer();
    string UserName = ViewBag.UserName;
    Login login = db.Logins.FirstOrDefault(a => a.UserName == UserName);
}

<div class="row">
    <h2><span class="col-sm-12">@ViewBag.Title</span></h2>
</div>
<hr style="border-top: 1px solid #6d9b90;" />

@using (Html.BeginForm("UsersChangePassword", "Employees", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="row">
        <div class="col-lg-offset-4 col-lg-4">
            <input class="form-control" type="Text" name="UserName" value="@ViewBag.UserName" readonly autocomplete="off">
            <span class="focus-input100"></span>
        </div>
    </div><br />
    <div class="row">
        <div class="col-lg-offset-4 col-lg-4">
            <input class="form-control" type="password" name="OldPassword" value="@login.Password" placeholder="Enter Old Password" autocomplete="off" readonly>
            <span class="focus-input100"></span>
        </div>
    </div><br />
    <div class="row">
        <div class="col-lg-offset-4 col-lg-4">
            <input class="form-control" type="password" name="NewPassword" placeholder="Enter New Password" autocomplete="off" required>
            <span class="focus-input100"></span>
        </div>
    </div><br />
    <div class="row">
        <div class="col-lg-offset-4 col-lg-4">
            <input class="form-control" type="password" name="CnfrmPassword" placeholder="Confirm New Password" autocomplete="off" required>
            <span class="focus-input100"></span>
        </div>
    </div><br />
    <div class="col-lg-offset-4 col-lg-6">
        @{
            if (ViewBag.MessageType == "error")
            {
                <span style="color:red;">@Html.Raw(ViewBag.ErrorMessage)</span>
            }
            if (ViewBag.MessageType == "success")
            {
                <span style="color:green;">@Html.Raw(ViewBag.ErrorMessage)</span>
            }
        }

    </div><br /><br />
    <div class="row">
        <div class="col-lg-offset-4 col-sm-12">
            <button type="submit" class="btn btn-primary">
                Update
            </button>
            <a href="@Url.Content("~/Employees/UsersDetail")" class="btn btn-primary">Back</a>
        </div>
    </div>
            }
