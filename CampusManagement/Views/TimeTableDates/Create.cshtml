@model CampusManagement.Models.TimeTableYear

@using (Html.BeginForm("Create", "TimeTableDates", FormMethod.Post))
{
    @Html.AntiForgeryToken()
   
    <div class="row">
        <h2><span class="col-sm-12">Add Dates of Year</span></h2>
    </div>
    <hr style="border-top: 1px solid #6d9b90;" />
    @Html.Partial("_MessageView")
  
    <div class="row">
      
        <div class="col-sm-4 ">
            @Html.LabelFor(model => model.YearNo, " Year No.", htmlAttributes: new { @class = "control-label" })
            @Html.DropDownList("YearNo", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.YearNo, "", new { @class = "text-danger" })
        </div>
       
        <div class="col-sm-4 hidden">
            @Html.LabelFor(model => model.IsActive, htmlAttributes: new { @class = "control-label" })
            @Html.DropDownList("IsActive", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-sm-3">
            <input type="submit" value="Add" class="btn btn-primary" />
            <a href="@Url.Content("~/TimeTableDates/Index")" class="btn btn-primary">Refresh</a>
            
        </div>
    </div>
}
