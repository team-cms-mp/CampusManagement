@model IEnumerable<CampusManagement.Models.GetApplicantStudentChallansSummary_Result>
@{
    ViewBag.Title = "Payment Summary";
    ////Layout = "~/Views/Shared/_MyLayout.cshtml";
}

<div class="row">
    <h2><span class="col-sm-12">@ViewBag.Title</span></h2>
</div>
<hr style="border-top: 1px solid #6d9b90;" />

@using (Html.BeginForm("PaymentCollectionSummary", "Finance", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-sm-2">
            <label for="FormNo" class="control-label">Form #</label>
            <input id="FormNo" name="FormNo" class="form-control" />
        </div>
        <div class="col-sm-5">
            <label for="BatchID" class="control-label">Session</label>
            <select id="BatchID" name="BatchID" class="form-control"></select>
        </div>
        <div class="col-sm-5">
            <label for="BatchProgramID" class="control-label">Program</label>
            <select id="BatchProgramID" name="BatchProgramID" class="form-control"></select>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-sm-5">
            <input type="submit" value="Search" class="btn btn-primary" />
        </div>
    </div>
}

<table class="table">
    <tr>
        <th>
            Type
        </th>
        <th>
            Amount
        </th>
        <th>
            Actions
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @{ 
                    if(item.AmountType == "Collected Amount")
                    {
                        <span style="color:green;font-weight:bold;">@item.AmountType</span>
                    }
                    else if (item.AmountType == "Payable Amount")
                    {
                        <span style="color:red;font-weight:bold;">@item.AmountType</span>
                    }
                    else if (item.AmountType == "Total Amount")
                    {
                        <span style="color:brown;font-size:20px;font-weight:bold;">@item.AmountType</span>
                    }
                }
            </td>
            <td>
                @{
                    if (item.AmountType == "Collected Amount")
                    {
                        <span style="color:green;font-weight:bold;">@item.TotalAmount</span>
                    }
                    else if (item.AmountType == "Payable Amount")
                    {
                        <span style="color:red;font-weight:bold;">@item.TotalAmount</span>
                    }
                    else if (item.AmountType == "Total Amount")
                    {
                        <span style="color:brown;font-size:20px;font-weight:bold;">@item.TotalAmount</span>
                    }
                }
            </td>
            <td>
                @{
                    if (item.AmountType == "Collected Amount")
                    {
                        @Html.ActionLink("Detail", "PaymentCollection", new { })
                    }
                    else if (item.AmountType == "Payable Amount")
                    {
                        @Html.ActionLink("Detail", "PayablesFromStudents", new { })
                    }
                }
            </td>
        </tr>
    }

</table>

<script>

    $(document).ready(function () {
        GetActiveBatches();
        $("#BatchID").val(@ViewBag.BatchID);
        GetPrograms_by_FacultyLevelBatch();
        $("#BatchProgramID").val(@ViewBag.BatchProgramID);
        $("#FormNo").val(@ViewBag.FormNo);

        $("#BatchID").change(function () {
            GetPrograms_by_FacultyLevelBatch();
        });
    });

    function GetPrograms_by_FacultyLevelBatch() {

        var BatchID = $("#BatchID").val();
        $.ajax({
            url: "@Url.Content("~/Finance/GetPrograms_by_FacultyLevelBatch")",
            type: 'POST',
            datatype: 'application/json',
            contentType: 'application/json',
            async: false,
            data: JSON.stringify({ BatchID: +BatchID }),
            success: function (result) {
                $("#BatchProgramID").html("");
                $("#BatchProgramID").append($('<option></option>').val("0").html("--Please Select--"));
                $.each($.parseJSON(result), function (i, sem) {
                    $("#BatchProgramID").append($('<option></option>').val(sem.BatchProgramID).html(sem.ProgramName));
                });
            },
            error: function (ex) {
                alert(ex.error);
            }
        });
    }

    function GetActiveBatches() {
        $.ajax({
            url: "@Url.Content("~/Finance/GetActiveBatches")",
            type: 'POST',
            datatype: 'application/json',
            contentType: 'application/json',
            async: false,
            success: function (result) {
                $("#BatchID").html("");
                $("#BatchID").append($('<option></option>').val("0").html("--Please Select--"));
                $.each($.parseJSON(result), function (i, sem) {
                    $("#BatchID").append($('<option></option>').val(sem.BatchID).html(sem.BatchName));
                });

                if ("@ViewBag.hdnBatchID" != "") {
                    $("#BatchID").val("@ViewBag.hdnBatchID");
                }
            },
            error: function (ex) {
                alert(ex.error);
            }
        });
    }
</script>



