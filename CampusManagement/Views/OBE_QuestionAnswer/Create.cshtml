@model CampusManagement.Models.QuestionAnswer
    @using CampusManagement.Models
    @using (Html.BeginForm("Create", "OBE_QuestionAnswer", FormMethod.Post))
    {
        @Html.AntiForgeryToken()



        <div class="row">
            <h2><span class="col-sm-12">Add Answer</span></h2>
        </div>
        <hr style="border-top: 1px solid #6d9b90;" />
        @Html.Partial("_MessageView")

        <div class="row">

            <div class="col-sm-4">
                <label>Question</label>
                @Html.DropDownListFor(model => model.QuestionID, null,"-- Select Question --" ,htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.QuestionID, "", new { @class = "text-danger" })
            </div>

           
            <div class="col-sm-3">
                @Html.LabelFor(model => model.IsCorrectAnswer, "Is CorrectAnswer", htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.IsCorrectAnswer, new { htmlAttributes = new { @class = "form-control", @required = true } })
                @Html.ValidationMessageFor(model => model.IsCorrectAnswer, "", new { @class = "text-danger" })

            </div>

            <div class="col-sm-3">
                @Html.LabelFor(model => model.AnswerDescription, "Answer Description". htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.AnswerDescription, new { htmlAttributes = new { @class = "form-control", @required = true } })
                @Html.ValidationMessageFor(model => model.AnswerDescription, "", new { @class = "text-danger" })

            </div>

            <div class="col-sm-3">
                @Html.LabelFor(model => model.IsActive, htmlAttributes: new { @class = "control-label" })
                @Html.DropDownList("IsActive", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
                    <div class="row">
                        <div class="col-sm-12">
                            <input type="submit" value="Add" class="btn btn-primary" />
                            @Html.ActionLink("Refresh", "Create", "OBE_QuestionAnswer", new { ExamID = ViewBag.hdnExamID }, new { @class = "btn btn-primary" })
                            @Html.ActionLink("Back to Answer ", "Index", "OBE_QuestionAnswer", new { ExamID = ViewBag.hdnExamID }, new { @class = "btn btn-primary" })
                        </div>
                    </div>
    }
